<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guillermo.adriaprogresstracker" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ParticipantListActivity"
            android:label="@string/title_participant_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ParticipantDetailActivity"
            android:label="@string/title_participant_detail"
            android:parentActivityName=".ParticipantListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guillermo.adriaprogresstracker.ParticipantListActivity" />
        </activity>
    </application>

</manifest>
